<% if spree_current_user %>
  <li><%= link_to Spree.t(:my_account), spree.account_path %></li>
  <li><%= link_to Spree.t(:logout), spree_logout_path, method: :delete %></li>
<% else %>
  <li id="link-to-signup"><%= link_to Spree.t(:signup), spree_signup_path %></li>
  <li id="link-to-login"><%= link_to Spree.t(:login), spree_login_path %></li>
<% end %>
