<% if @about_us.nil? %>
  <div class="container">
  <article class="row">
    <div class="about-us-img col-md-6">
      <img src="http://via.placeholder.com/350x150">
    </div>
    <div class="about-us-content col-md-6">
      <h1><%= "Tiêu đề mặc dinh".upcase %></h1>
      <h2>Tiêu đề phu mặc dinh</h2>
      <p>Nội dung mặc định</p>
    </div>
  </article>
  </div>
<% else %>
  <article>
    <h1><%= @about_us.title1.upcase %></h1>
    <h2><%= @about_us.subtitle1 unless @about_us.subtitle1.empty? %></h2>
    <p><%= @about_us.body1%></p>

    <% unless @about_us.title2.empty? %>
      <h1><%= @about_us.title2 %></h1>
      <h2><%= @about_us.subtitle2 if !@about_us.subtitle2.empty? %></h2>
      <p><%= @about_us.body2 %></p>
    <% end %>
  </article>
<% end %>